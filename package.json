{
  "name": "accordion",
  "version": "0.1.0",
  "description": "A vanilla Javascript accordion component",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "test": "mocha",
    "sass": "node-sass src/scss/ --output-style compressed  --output dist/css/",
    "watch": "npm run sass && node-sass src/scss/ --watch --recursive --output dist/css/",
    "copy": "copyfiles -u 1 src/js/accordion.js src/img/** dist",
    "serve": "static-server",
    "build": "npm run copy && npm run sass && npm run uglify"
  },
  "keywords": [
    "accordion",
    "components",
    "es6"
  ],
  "author": "Gabriele D'Arrigo darrigo.g@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "static-server": "^2.0.4",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "jsdom": "^9.11.0"
  }
}
